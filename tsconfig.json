{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./build/",
        "types": [
            "node",
            "arcgis-js-api"
        ],
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
    },
    "include": [
        "node_modules/arcgis-js-api/index.d.ts",
        "src/**/*.tsx"
    ]
}